<%= link_to "#{current_order.order_items.size} Items in Cart ( #{number_to_currency current_order.subtotal} )", cart_path, class: "btn btn-link"%>

<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>
<!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog" style="display:none;">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title" style="text-align:center">Select Products</h4>
        </div>
        <div class="modal-body">
          <div class="row">
          	<form role="form" >

              
                  <table class="table table-striped">
                  <tr>
                      <td> <input type="checkbox"> </td>
                      <td style="text-align:left"> Search Attributes </td>
                  </tr>
                  <tr>
                      <td> <input type="checkbox"> </td>
                      <td style="text-align:left"> Event IDs </td>
                  </tr>
                  <tr>
                      <td> <input type="checkbox"> </td>
                      <td style="text-align:left"> Event Occurrence Location & File Source </td>
                  </tr>
              </table>
              
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
