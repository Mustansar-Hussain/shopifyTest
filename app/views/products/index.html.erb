<% if user_signed_in? %>
 <div class="row">
      <div class="col-xs-6">
        <h1><%= link_to "My Store", root_path %></h1>
      </div>
      <div class="col-xs-6 text-right">
        <h1><%= link_to "Log_out", destroy_user_session_path, :method => 'delete' %></h1>
        <h1 class="cart-text"><%= render 'layouts/cart_text' %></h1>
      </div>
    </div>
    <hr>
<h3 class="text-center">Products for Sale</h3>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% @products.each do |product| %>
      <%= render "product_row", product: product, order_item: @order_item %>
    <% end %>
  </div>
</div>


<%else%>
   <h1>
      <span><%= link_to "Login", new_user_session_path %></span> | 
      <span><%= link_to "Sign_up", new_user_registration_path %></span> |

      <span><a href="/login">Shopify</a><span>
    </h1>
    <div>
      <h3 style="text-align:center">Please Log In <strong>Or</strong> create new account <strong>Or</strong> use Shopify</h3>
    </div>



<%end%>
 